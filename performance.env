# RocketMQ Proxy 性能配置
# ==========================================

# gRPC服务配置
GRPC_PORT=50051
MAX_CONCURRENT=1000           # 最大并发gRPC连接数
READ_TIMEOUT=30s             # 读取超时
WRITE_TIMEOUT=30s            # 写入超时

# RocketMQ连接池配置
PRODUCER_POOL_SIZE=10        # 生产者连接池大小
CONSUMER_POOL_SIZE=20        # 消费者连接池大小
MESSAGE_BUFFER_SIZE=1000     # 消息缓冲区大小

# RocketMQ日志配置
ROCKETMQ_LOG_LEVEL=warn      # RocketMQ SDK日志级别: debug,info,warn,error,fatal
                             # 建议设置为warn或error以减少offset更新的噪音日志

# RocketMQ 超时配置
PULL_TIMEOUT=5s              # 消息拉取超时时间 (减少超时警告)
PULL_INTERVAL=1s             # 拉取间隔 (降低网络负载)

# 性能调优配置
WORKER_POOL_SIZE=100         # 工作协程池大小
BATCH_SIZE=100               # 批量处理大小
FLUSH_INTERVAL=100ms         # 刷新间隔

# 监控配置
ENABLE_METRICS=true          # 启用指标监控
METRICS_PORT=8080           # 指标服务端口

# 高并发场景配置示例：
# MAX_CONCURRENT=5000
# MESSAGE_BUFFER_SIZE=10000
# WORKER_POOL_SIZE=500

# 低延迟场景配置示例：
# MESSAGE_BUFFER_SIZE=100
# FLUSH_INTERVAL=10ms
# BATCH_SIZE=10 